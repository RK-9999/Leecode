class Solution {
public:
    bool canVisitAllRooms(vector<vector<int>>& rooms) 
    {
        int v = rooms.size();
        vector<int> visit(v+1,0);
        int count=0;
        queue<int> q;
        q.push(0);
        visit[0]=1;
        while(!q.empty())
        {
            int node = q.front();
            q.pop();
            for(auto &it : rooms[node])
            {
                if(!visit[it])
                {
                    q.push(it);
                    visit[it]=1;
                }
            }
            count++;
        }
        if(count==v)
            return true;
        return false;
        
    }
};
